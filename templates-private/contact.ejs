<% layout('layouts/commonPage') -%>
<% block('title', 'Contact me') %>
<% block('main', 'js/contact/main.js') %>

<%- partial('partials/commonHeader') %>

<section class="contact_hire_message">
    <div class="centering_block">
        <p class="contact_hire_message_text">
            To contact me for any reason, please fill the short form below
        </p>
    </div>
</section>
<section class="contact_hire_form_sec">
    <div class="centering_block">
        <div class="contact_hire_form_block">
            <form action="/contact/hire" class="contact_hire_form" method="post">
                <div class="contact_hire_form_block_center">
                    <h2 class="contact_hire_form_header">
                        Your contacts
                    </h2>
                    <hr class="contact_hire_form_header_line">
                    <p class="contact_hire_form_field">
                        Your name
                        <input type="text" class="contact_hire_form_input" name="client_name" 
                                        id="client_name" required placeholder="ex. Vlad Khrystenko" autofocus="">
                        <em class="error_message">Please name yourself</em>
                    </p>
                    <p class="contact_hire_form_field">
                        Your email
                        <input type="email" class="contact_hire_form_input" name="client_email" 
                                        id="client_email" required placeholder="ex. hi@gmail.com">
                        <em class="error_message">Please enter valid email</em>
                    </p>
                    <p class="contact_hire_form_field">
                        Your message
                        <textarea name="client_msg" id="client_msg" required placeholder="enter text here"></textarea>
                        <em class="error_message">Please write something</em>
                    </p>
                    <input value="Send" class="contact_hire_form_submit" type="submit">
                    <span class="contact_hire_form_ajax_status"></span>
                </div>
            </form>
        </div>
    </div>
</section>
<div class="email_result_cover">
    <div class="email_result">
        <p class="email_result_message">
        </p>
        <button class="email_result_button">ok</button>
    </div>
</div>
<%- partial('partials/commonFooter') %>