{
    "app": {
        "port": 3000,
        "port_browser_sync": 3001,
        "log_dir": "logs",
        "debugOnProd": false,
        "debugOnDev": false
    },
    "gulp": {
        "srcJS": "private/js",
        "dstJS": "public/js",
        "srcCSS": "private/css",
        "dstCSS": "public/css",
        "srcImgs": "private/imgs",
        "dstImgs": "public/imgs",
        "srcAll": "private",
        "dstAll": "public",
        "srcTemplates": "templates-private",
        "dstTemplates": "templates",
        "dstRevisionManifest": "private/manifest",
        "nodemon": {
            "script": "bin/www.js",
            "env": {
                "NODE_PATH": "."
            },
            "delay": 2,
            "nodeArgs": ["--debug"],
            "watch": ["bin/*.js", "app.js"]
        }
    }
}